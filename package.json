{
  "name": "@krieselreihe/natr",
  "version": "0.2.3",
  "description": "Not another test runner! But it is, and it is a highly opinionated one.",
  "main": "./src/runner.js",
  "types": "./src/runner.d.ts",
  "bin": {
    "natr": "./src/cli.js"
  },
  "scripts": {
    "test": "./src/cli.js -r @babel/register \"src/__tests__/*.test.(js|jsx)\" | tap-color",
    "test:typings": "tsc",
    "coverage": "nyc --reporter=html --reporter=text ./src/cli.js -r @babel/register \"src/__tests__/*.test.(js|jsx)\" | tap-nyc",
    "coverage:ci": "nyc --reporter=text-lcov ./src/cli.js -r @babel/register \"src/__tests__/*.test.(js|jsx)\" | coveralls",
    "lint": "eslint --ext .js,.jsx .",
    "format": "prettier --write .",
    "format:check": "prettier --list-different .",
    "ci": "pnpm run prerelease && pnpm run coverage:ci",
    "prerelease": "pnpm run lint && pnpm run format:check && pnpm test && pnpm run test:typings",
    "release": "standard-version -a -s",
    "prepare": "node ./scripts/ensure-package-manager.js"
  },
  "keywords": [
    "natr",
    "test",
    "testing",
    "tdd",
    "runner",
    "opinionated",
    "tap"
  ],
  "author": "Krieselreihe Games <info@krieselreihe.com> (https://krieselreihe.com)",
  "contributors": [
    "Martin Helmut Fieber <info@martin-fieber.se> (https://martin-fieber.se)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krieselreihe/natr.git"
  },
  "bugs": {
    "url": "https://github.com/krieselreihe/natr/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "files": [
    "src/*.js",
    "src/*.ts"
  ],
  "babel": {
    "plugins": [
      "@babel/plugin-transform-react-jsx"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "impliedStrict": false,
      "jsx": true
    },
    "env": {
      "node": true,
      "es6": true
    },
    "settings": {
      "browsers": [
        "maintained node versions"
      ],
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "no-prototype-builtins": 0
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "baseBranches": [
      "main"
    ],
    "supportPolicy": [
      "lts_latest"
    ],
    "dependencies": {
      "semanticPrefix": "chore:",
      "semanticCommitScope": ""
    },
    "pin": {
      "semanticPrefix": "chore:",
      "semanticCommitScope": ""
    },
    "semanticPrefix": "chore:",
    "semanticCommitScope": "",
    "packageRules": [
      {
        "updateTypes": [
          "minor",
          "patch",
          "pin",
          "digest"
        ],
        "automerge": true
      }
    ]
  },
  "dependencies": {
    "fast-deep-equal": "3.1.3",
    "fast-glob": "3.2.5",
    "minimist": "1.2.5",
    "object-inspect": "1.10.3",
    "stack-utils": "2.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.14.3",
    "@babel/plugin-transform-react-jsx": "7.14.3",
    "@babel/register": "7.13.16",
    "commitizen": "4.2.4",
    "concat-stream": "2.0.0",
    "conventional-changelog-conventionalcommits": "4.6.0",
    "coveralls": "3.1.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.23.2",
    "nyc": "15.1.0",
    "prettier": "2.3.0",
    "react": "17.0.2",
    "react-test-renderer": "17.0.2",
    "standard-version": "9.3.0",
    "stream-spec": "0.3.6",
    "tap-color": "1.2.0",
    "tap-nyc": "1.0.3",
    "typescript": "4.3.2"
  }
}
