{
  "name": "@krieselreihe/natr",
  "version": "0.1.0",
  "description": "Not another test runner! But it is, and it is my highly opinionated one.",
  "main": "src/index.js",
  "bin": {
    "natr": "./src/cli.js"
  },
  "scripts": {
    "test": "./src/cli.js src/__tests__/*.test.js | tap-color",
    "coverage": "nyc --reporter=html --reporter=text ./src/cli.js src/__tests__/*.test.js | tap-nyc",
    "t:tap": "tap src/__tap_tests__",
    "t:examples": "./src/cli.js examples/*.js | tap-color",
    "t:examples:coverage": "nyc --reporter=html ./src/cli.js examples/*.js | tap-nyc",
    "t:coverage": "nyc tape src/__tests__/*.js | tap-nirvana",
    "lint": "eslint --ignore-path .gitignore --ext .js .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{js,md,json,yml}\"",
    "format:check": "prettier --ignore-path .gitignore --list-different \"**/*.{js,md,json,yml}\""
  },
  "keywords": [
    "natr",
    "test",
    "runner",
    "opinionated",
    "tap"
  ],
  "author": "Krieselreihe Games <info@krieselreihe.com> (https://krieselreihe.com)",
  "contributors": [
    "Martin Helmut Fieber <info@martin-fieber.de> (https://martin-fieber.de)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krieselreihe/natr.git"
  },
  "bugs": {
    "url": "https://github.com/krieselreihe/natr/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "dependencies": {
    "fast-deep-equal": "2.0.1",
    "fast-glob": "2.2.6",
    "minimist": "1.2.0",
    "object-inspect": "1.6.0",
    "stack-utils": "1.0.2"
  },
  "devDependencies": {
    "commitizen": "3.1.1",
    "concat-stream": "2.0.0",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-compat": "3.1.1",
    "nyc": "14.1.1",
    "prettier": "1.17.1",
    "stream-spec": "0.3.6",
    "tap": "13.1.11",
    "tap-color": "1.1.0",
    "tap-nirvana": "1.1.0",
    "tap-nyc": "1.0.3"
  }
}
