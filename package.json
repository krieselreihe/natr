{
  "name": "@krieselreihe/natr",
  "version": "0.1.3",
  "description": "Not another test runner! But it is, and it is a highly opinionated one.",
  "main": "./src/runner.js",
  "bin": {
    "natr": "./src/cli.js"
  },
  "scripts": {
    "test": "./src/cli.js -r @babel/register \"src/__tests__/*.test.(js|jsx)\" | tap-color",
    "coverage": "nyc --reporter=html --reporter=text ./src/cli.js -r @babel/register \"src/__tests__/*.test.(js|jsx)\" | tap-nyc",
    "coverage:ci": "nyc --reporter=text-lcov ./src/cli.js -r @babel/register \"src/__tests__/*.test.(js|jsx)\" | coveralls",
    "lint": "eslint --ignore-path .gitignore --ext .js --ext .jsx .",
    "format": "prettier --write \"**/*.{js,jsx,md,json,yml}\"",
    "format:check": "prettier --list-different \"**/*.{js,jsx,md,json,yml}\"",
    "ci": "pnpm run prerelease && pnpm run coverage:ci",
    "prerelease": "pnpm run lint && pnpm run format:check && pnpm test",
    "release": "standard-version -a -s"
  },
  "keywords": [
    "natr",
    "test",
    "runner",
    "opinionated",
    "tap"
  ],
  "author": "Krieselreihe Games <info@krieselreihe.com> (https://krieselreihe.com)",
  "contributors": [
    "Martin Helmut Fieber <info@martin-fieber.de> (https://martin-fieber.de)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krieselreihe/natr.git"
  },
  "bugs": {
    "url": "https://github.com/krieselreihe/natr/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10",
    "pnpm": ">=3"
  },
  "files": [
    "src/*.js"
  ],
  "dependencies": {
    "fast-deep-equal": "2.0.1",
    "fast-glob": "3.0.3",
    "minimist": "1.2.0",
    "object-inspect": "1.6.0",
    "stack-utils": "1.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.5.0",
    "@babel/plugin-transform-react-jsx": "7.3.0",
    "@babel/register": "7.4.4",
    "commitizen": "3.1.1",
    "concat-stream": "2.0.0",
    "conventional-changelog-conventionalcommits": "3.0.2",
    "coveralls": "3.0.4",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "6.0.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-react": "7.14.2",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "react": "16.8.6",
    "react-test-renderer": "16.8.6",
    "standard-version": "6.0.1",
    "stream-spec": "0.3.6",
    "tap-color": "1.1.0",
    "tap-nyc": "1.0.3"
  }
}
